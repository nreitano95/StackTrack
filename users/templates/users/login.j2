{% extends 'opportunities/base.j2' %}
{% load static %}
{% load crispy_forms_tags %}
{% load socialaccount %}

{% block title %}
    Sign In
{% endblock %}

{% block content %}

    <div class='content-section'>
        <legend class="border-bottom mb-4">Log In with Google</legend>
            <div class="google-sign-on-btn">
                <a href="{% provider_login_url 'google' %}"><img src="{% static 'opportunities/google_signin/btn_google_signin_light_normal_web.png' %}" style="width:191px;height:46px;"></a>
                <a href="{% provider_login_url 'google' %}"><img src="{% static 'opportunities/google_signin/btn_google_signin_dark_normal_web@2x.png' %}" style="width:191px;height:46px;" class="google-hover"></a>
            </div>
   
        <legend>OR</legend><br>
   
        <form method="POST">
            {% csrf_token %}
            <fieldset class='form-group'>
                <legend class="border-bottom mb-4">Log In with Username and Password</legend>
                {{ form|crispy }}
            </fieldset>
            <div class="form-group">
                <button class="btn btn-outline-success" type="submit">Log In</button>
                <small class="text-muted ml-2"><a href="{% url 'password_reset' %}">Forgot Password?</a></small>
            </div>
        </form>
        <div class="border-top pt-3">
            <small class='text-muted'>
                Need an Account? <a class="ml-2" href="{% url 'register' %}">Sign Up Now</a>
            </small>
        </div>
    </div>


{% endblock %}