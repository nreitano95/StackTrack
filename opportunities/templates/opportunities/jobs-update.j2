{% extends "opportunities/base.j2" %}
{% load crispy_forms_tags %}

{% block title %}
    Update Job
{% endblock %}

{% block content %}

<div class="container">
  <div class="main">
      <!-- Create a Form -->
      <form method="POST">
          <!-- Security token by Django -->
          {% csrf_token %}
  
          <!-- Crispy form  -->
          {{ form | crispy }}
  
          <input type="submit" value="Update">
          <a href="{% url 'opportunities-jobs' %}" class="btn btn-danger">Cancel</a>

      </form>
  </div>
</div>

{% endblock content %}