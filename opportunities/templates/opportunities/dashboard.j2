{% extends "opportunities/base.j2" %}

{% block title %}
    Dashboard
{% endblock %}

{% block content %}

{# Reference: https://getbootstrap.com/docs/4.0/components/modal/ #}
<!-- Modal -->
    <div class="modal fade" id="addJobModal" tabindex="-1" role="dialog" aria-labelledby="addJobModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addJobModalLabel">Enter Job Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body add-job-modal-body">
                <form method="POST" enctype="multipart/form-data">
                
                    <!-- Security token -->
                    {% csrf_token %}
                
                    <!-- Using the formset -->
                    {{ form.as_p }}
                    
                    <input  type="submit" value="Submit">
                </form>
            </div>
            </div>
        </div>
    </div>

<div class="container">
    <h1 class="display-4 text-center">My Dashboard</h1>
    <div class="card text-center">
        <div class="card-header">
            <h3>My Jobs</h3>
        </div>
        {% if not jobs %}
            <div class="card-body">
                <h5 class="card-title">No applications are currently being tracked.</h5>
                <p class="card-text">Add a new job to keep track of.</p>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addJobModal">Track a New Job</button>
            </div>
        </div>
    {% else %}

    <div class="card-deck">
        <div class="card">
            <div class="card-body">
            <h5 class="card-title">Jobs Currently Tracked</h5>
            <h1 class="card-text">{{ jobs | length }}</h1>
            </div>
            <div class="card-footer">
            <small class="text-muted"></small>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
            <h5 class="card-title">Pending Applications</h5>
            <h1 class="card-text">{{ pending_apps | length}}</h1>

            </div>
            <div class="card-footer">
            <small class="text-muted"></small>
            </div>
        </div>
            <div class="card">
            <div class="card-body">
            <h5 class="card-title">Submitted Applications</h5>
            <h1 class="card-text">{{ submitted_apps | length}}</h1>
            </div>
            <div class="card-footer">
            <small class="text-muted"></small>
            </div>
        </div>
    </div>
            <div class="card-body">
                <a href="{% url 'opportunities-jobs' %}" class="btn btn-primary" data-target="#addJobModal" data-toggle="addJobModal">Track New Job</a>
            </div>
            <div class="row mt-5">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead class="thead">
                        <tr>
                            <th>Company</th>
                            <th>Title</th>
                            <th>Employment Type</th>
                            <th>Salary</th>
                            <th>Description</th>
                            <th>Application Status</th>
                            <th>Application Date</th>
                            <th colspan="2"></th>
                        </tr>
                        </tr>
                    </thead>
                    <tbody>
                        {% for job in jobs %}
                        <tr>
                            <td>{{ job.company }}</td>
                            <td>{{ job.title }}</td>
                            <td>{{ job.employment_type }}</td>
                            <td>{{ job.salary }}</td>
                            <td>{{ job.description }}</td>
                            <td>{{ job.application_status }}</td>
                            <td>{{job.application_date|date:'Y-m-d'}}</td>
                            
                            {# Update job #}
                            <td>
                                <a href="{% url 'opportunities-update-job' job_id=job.id %}" class="btn btn-secondary">Update</a>
                            </td>
                            <td><a href="{% url 'opportunities-delete-job' job_id=job.id %}" class="btn btn-danger" onclick="confirmationMsg(event)">Delete</a></td>

                        </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        </div>


    {% endif %}


</div>






{% endblock content %}